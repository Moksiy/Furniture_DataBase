        <Label Content="Ваш Логин" HorizontalAlignment="Left" Margin="325,213,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="325,306,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <Button x:Name="logIn" Content="LogIn" HorizontalAlignment="Left" Margin="450,510,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="20"/>

    </Grid>
</Page>
